{
    "manifest_version": 3,
    
    "name": "YoutubeRead",
    
    "version": "1.0",
    
    "description": "A simple extension to summarize Youtube videos",
    
    "permissions": ["scripting", "activeTab", "tabs"],

    "content_scripts":[
      {
        "matches": ["https://www.youtube.com/*"],
        "js":["scripts/content.js"]
      }
    ],

    "background": {
      //"service_worker": "scripts/background.js"  //CHROME
      "scripts": ["scripts/background.js"] //FIREFOX
    }

    
  }
  