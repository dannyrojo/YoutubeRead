{
    "manifest_version": 3,
    
    "name": "YoutubeRead",
    
    "version": "0.5",
    
    "description": "Too long, didn't watch",
    
    "permissions": ["scripting", "activeTab", "tabs", "sidePanel"],

    "content_scripts":[
      {
        "matches": ["https://www.youtube.com/*"],
        "js":["scripts/content.js"]
      }
    ],

    "background": {
      "service_worker": "scripts/background.js"  //CHROME
      //"scripts": ["scripts/background.js"] //FIREFOX
    },

    "side_panel":{
      "default_path": "sidepanel/sidepanel.html",
      "width": 300
    }
    
  }
  